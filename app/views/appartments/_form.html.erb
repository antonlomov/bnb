<%= simple_form_for(@appartment) do |f| %>
  <%= f.error_notification %>

  <%= f.input :address %>
  <%= f.input :nbr_rooms, collection: @room_numbers %>
  <%= f.input :capacity, collection: @capacities %>
  <%= f.input :property_type, collection: @property_types %>
  <%= f.input :price, as: :integer %>
  <%= f.input :picture %>
  <%= f.button :submit %>
<% end %>
