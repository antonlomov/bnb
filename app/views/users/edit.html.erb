<div class="padded">
  <div class="container">
    <div class="row">
      <div class="form-style">
        <div class="panel-header">
          <h1>Edit Apartment Listing</h1>
          <p>Keep your apartment listing up-to-date</p>
        </div>
        <div class="panel-body">
          <%= simple_form_for(@user) do |f| %>
          <%= f.error_notification %>

          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :phone_number %>
          <%= f.input :picture %>
          <%= f.input :email %>
          <%= f.button :submit %>
        <% end %>
        </div>
      </div>
  </div>
</div>



