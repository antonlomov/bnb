<div class="padded">
  <div class="container">
    <div class="row">
      <div class="form-style">
        <div class="panel-header">
          <h1>Edit Profile</h1>
        </div>
        <div class="panel-body">
          <%= simple_form_for(@user) do |f| %>
          <%= f.error_notification %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :phone_number %>
          <%= f.input :picture %>
          <%= f.button :submit, "Update Profile" %>
        <% end %>
        </div>
      </div>
    </div>
    <div>
    <%= link_to "Update Profile & Continue to Edit Account Details", edit_account_registration_path %>
    </div>
  </div>
</div>



